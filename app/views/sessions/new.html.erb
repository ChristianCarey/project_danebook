<%= form_tag session_path, id: 'main-login-form' do %>
  <div class="form-group">
    <%= label_tag     :email %>
    <%= email_field_tag :email, nil, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= label_tag        :password %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= check_box_tag :remember, '1', true %>
    <%= label_tag     :remember, 'Keep me logged in' %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In", class: 'btn btn-primary'%>
  </div>
<% end %>
<%= link_to "New user? Sign up for a new account.", new_user_path %>
