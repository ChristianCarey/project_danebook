<% present comment do |comment_presenter| %>
  <div class="post-comment">
    <div class="comment-thumbnail-container no-small">
      <%= image_tag 'tyrion_profile', class: 'comment-thumbnail' %>
    </div>
    <div class="comment content">
      <p class="comment-header">
        <%= link_to comment.author.name, user_posts_path(comment.author), class: 'underlined' %>&nbsp
        <span class="time faded">
          said <%= time_ago_in_words(comment.created_at) %> ago
        </span>
      </p>
      <p>
        <%= comment.content %>
      </p>
      <div class="comment-footer">
      <!-- TODO, set likable ID outside of markup? -->
        <span class="like"><%= link_to 'Like', comment_likings_path(comment), method: :post %></span>
        <%= comment_presenter.delete_link %>
        <span class="other-likes faded"><%= comment_presenter.num_likings %></span>
      </div>
    </div>
  </div>
<% end %>